/* pages/job_management.wxss */
page {
    background-color: #f7f8fa; /* 浅灰色背景，衬托白色卡片 */
  }
  
  .tab-bar {
    display: flex;
    background: #ffffff;
    padding: 20rpx 0;
    position: sticky;
    top: 0;
    z-index: 100;
  }
  
  .tab-item {
    flex: 1;
    text-align: center;
    font-size: 28rpx;
    color: #646566;
    position: relative;
    transition: all 0.3s;
  }
  
  .tab-item.active {
    color: #0052d9;
    font-weight: bold;
    font-size: 30rpx;
  }
  
  .active-line {
    position: absolute;
    bottom: -10rpx;
    left: 25%;
    width: 50%;
    height: 6rpx;
    background: #0052d9;
    border-radius: 3rpx;
  }
  
  /* 卡片样式 */
  .job-card {
    background: #ffffff;
    margin: 24rpx;
    padding: 32rpx;
    border-radius: 20rpx;
    box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
  }
  
  .card-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 20rpx;
  }
  
  .job-title {
    font-size: 36rpx;
    font-weight: 600;
    color: #323233;
  }
  
  .salary {
    font-size: 32rpx;
    color: #ff5d23;
    font-weight: 500;
  }
  
  .card-body {
    margin-bottom: 30rpx;
  }
  
  .info-item {
    font-size: 26rpx;
    color: #969799;
    margin-top: 8rpx;
  }
  
  .icon {
    margin-right: 12rpx;
  }
  
  /* 底部状态与操作 */
  .card-footer {
    border-top: 1rpx solid #ebedf0;
    padding-top: 24rpx;
    display: flex;
    flex-direction: column;
  }
  
  .status-group {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 24rpx;
  }
  
  .status-tag {
    padding: 6rpx 16rpx;
    font-size: 22rpx;
    border-radius: 8rpx;
  }
  
  .tag-green { background: #e8ffea; color: #0052d9; }
  .tag-orange { background: #fff2e8; color: #ff8533; }
  .tag-gray { background: #f5f5f5; color: #969799; }
  
  .action-buttons {
    display: flex;
    justify-content: flex-end;
    gap: 20rpx;
  }
  
  .btn {
    margin: 0 !important;
    font-size: 26rpx;
    font-weight: normal;
    border-radius: 30rpx;
    padding: 12rpx 30rpx;
  }
  
  .btn-outline {
    background: #fff;
    border: 1rpx solid #dcdee0;
    color: #323233;
  }
  
  .btn-danger {
    background: #fff;
    border: 1rpx solid #ee0a24;
    color: #ee0a24;
  }
  
  /* 空状态 */
  .empty-state {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding-top: 200rpx;
  }
  
  .empty-img {
    width: 300rpx;
    height: 300rpx;
    margin-bottom: 40rpx;
  }
  
  .empty-text {
    color: #969799;
    font-size: 28rpx;
    margin-bottom: 40rpx;
  }

  /* 驳回理由容器 */
.reject-reason-box {
    margin-top: 20rpx;
    background-color: #fff0f0; /* 浅红色背景 */
    border: 1rpx solid #ffcfd1;
    border-radius: 8rpx;
    padding: 16rpx;
  }
  
  .reject-title {
    display: flex;
    align-items: center;
    font-size: 24rpx;
    font-weight: bold;
    color: #e34d59;
    margin-bottom: 8rpx;
  }
  
  .reject-title text {
    margin-left: 8rpx;
  }
  
  .reject-content {
    font-size: 26rpx;
    color: #666;
    line-height: 1.5;
    padding-left: 40rpx;
  }
  
  .reject-tips {
    font-size: 20rpx;
    color: #999;
    margin-top: 12rpx;
    padding-left: 40rpx;
    font-style: italic;
  }
  
  /* 调整原有标签颜色 */
  .tag-red {
    background-color: #ffe8e9;
    color: #e34d59;
  }