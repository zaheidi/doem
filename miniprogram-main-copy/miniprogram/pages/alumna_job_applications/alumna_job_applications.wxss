/* pages/alumna_job_applications/alumna_job_applications.wxss */
page { background-color: #f8fafc; color: #1e293b; }

.header-section {
  background: linear-gradient(135deg, #396cbe, #0052d9);
  padding: 80rpx 40rpx 120rpx;
  border-bottom-left-radius: 60rpx;
  border-bottom-right-radius: 60rpx;
}

.header-content { display: flex; justify-content: space-between; align-items: flex-end; }
.welcome-title { display: block; font-size: 48rpx; font-weight: 800; color: #ffffff; }
.welcome-sub { font-size: 26rpx; color: rgba(255,255,255,0.8); margin-top: 8rpx; }

.stats-badge {
  background: rgba(255, 255, 255, 0.2);
  padding: 20rpx 30rpx;
  border-radius: 30rpx;
  text-align: center;
  backdrop-filter: blur(10px);
}
.stats-label { display: block; font-size: 20rpx; color: #ffffff; opacity: 0.9; }
.stats-value { font-size: 40rpx; font-weight: bold; color: #fbbf24; }

.main-content { margin-top: -60rpx; height: calc(100vh - 180rpx); }

.app-card {
  background: #ffffff;
  margin: 0 32rpx 32rpx;
  padding: 40rpx;
  border-radius: 32rpx;
  box-shadow: 0 10rpx 30rpx rgba(0,0,0,0.03);
  position: relative;
  border: 1rpx solid rgba(0,0,0,0.02);
}

.card-header { display: flex; align-items: center; margin-bottom: 30rpx; }
.user-avatar { width: 90rpx; height: 90rpx; border-radius: 24rpx; background: #f1f5f9; }
.user-meta { margin-left: 24rpx; flex: 1; }
.user-name { font-size: 34rpx; font-weight: 700; color: #0f172a; }
.user-tag { font-size: 22rpx; background: #ecfdf5; color: #396cbe; padding: 4rpx 16rpx; border-radius: 10rpx; margin-left: 16rpx; font-weight: 500; }
.job-target { font-size: 24rpx; color: #64748b; margin-top: 8rpx; }
.job-name { color: #334155; font-weight: 600; }

.status-dot { font-size: 18rpx; font-weight: bold; color: #f43f5e; background: #fff1f2; padding: 4rpx 12rpx; border-radius: 8rpx; }

/* 老师评价精修 */
.quote-section {
  background: #fdfaf3;
  padding: 30rpx;
  border-radius: 24rpx;
  position: relative;
  margin: 30rpx 0;
}
.quote-icon {
  position: absolute; top: -10rpx; left: 20rpx;
  font-size: 60rpx; color: #fde68a; font-family: Georgia, serif;
}
.quote-text { font-size: 28rpx; color: #475569; line-height: 1.6; position: relative; z-index: 1; }
.quote-footer { font-size: 22rpx; color: #94a3b8; text-align: right; margin-top: 20rpx; font-weight: 500; }

.card-footer { display: flex; justify-content: space-between; align-items: center; margin-top: 30rpx; }
.post-time { font-size: 22rpx; color: #94a3b8; }

.btn-group { display: flex; gap: 16rpx; }
.btn-minor { 
  font-size: 24rpx; color: #64748b; background: #f1f5f9; 
  padding: 0 30rpx; height: 64rpx; line-height: 64rpx; border-radius: 16rpx; margin: 0;
}
.btn-primary { 
  font-size: 24rpx; color: #ffffff; background: #396cbe; 
  padding: 0 40rpx; height: 64rpx; line-height: 64rpx; border-radius: 16rpx; margin: 0;
  box-shadow: 0 4rpx 12rpx rgba(16, 185, 129, 0.2);
}
.btn-hover { opacity: 0.8; transform: scale(0.98); }

/* 空状态 */
.empty-placeholder { text-align: center; padding-top: 200rpx; }
.empty-img { width: 400rpx; height: 300rpx; opacity: 0.8; }
.empty-text { display: block; font-size: 28rpx; color: #94a3b8; margin: 40rpx 0; }
.btn-post-now { 
  display: inline-block; width: 300rpx; background: #396cbe; color: #fff; 
  font-size: 28rpx; border-radius: 20rpx; 
}