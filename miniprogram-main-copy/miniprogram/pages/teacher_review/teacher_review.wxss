/* pages/teacher_review/teacher_review.wxss */
.review-page {
    background-color: #f6f6f6;
    min-height: 100vh;
  }
  
  .header-section {
    background: linear-gradient(180deg, #0052d9 0%, #0052d9 60%, #f6f6f6 100%);
    padding: 40rpx 32rpx 80rpx;
    color: #fff;
  }
  
  .main-title {
    font-size: 44rpx;
    font-weight: 600;
  }
  
  .subtitle {
    font-size: 24rpx;
    opacity: 0.8;
    margin-top: 12rpx;
  }
  
  .list-container {
    margin-top: -40rpx;
    padding: 0 24rpx;
    box-sizing: border-box;
  }
  
  .review-card {
    background: #fff;
    border-radius: 16rpx;
    padding: 32rpx;
    margin-bottom: 24rpx;
    box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.05);
  }
  
  .card-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-bottom: 2rpx solid #f0f0f0;
    padding-bottom: 20rpx;
    margin-bottom: 24rpx;
  }
  
  .publisher {
    display: flex;
    align-items: center;
  }
  
  .name-info {
    display: flex;
    flex-direction: column;
    margin-left: 16rpx;
  }
  
  .u-name {
    font-size: 28rpx;
    font-weight: 500;
    color: #333;
  }
  
  .u-tag {
    font-size: 20rpx;
    color: #0052d9;
    background: rgba(0,82,217,0.1);
    padding: 2rpx 8rpx;
    border-radius: 4rpx;
    width: fit-content;
  }
  
  .time-stamp {
    font-size: 22rpx;
    color: #999;
  }
  
  .job-main {
    display: flex;
    justify-content: space-between;
    margin-bottom: 12rpx;
  }
  
  .job-name {
    font-size: 34rpx;
    font-weight: bold;
    color: #333;
  }
  
  .job-price {
    color: #fa4126;
    font-weight: 600;
  }
  
  .job-sub {
    font-size: 26rpx;
    color: #666;
    margin-bottom: 16rpx;
  }
  
  .job-desc {
    font-size: 24rpx;
    color: #999;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    background: #f9f9f9;
    padding: 30rpx;
    border-radius: 8rpx;
  }
  
  .card-action {
    display: flex;
    gap: 20rpx;
    margin-top: 32rpx;
  }
  
  .btn-reject {
    color: #666 !important;
  }