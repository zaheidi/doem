/* job_detail.wxss */
page {
  background-color: #f5f5f5;
  height: auto;       
  overflow: visible;    
}

.container {
    display: block;      
    width: 100%;
    height: auto;        
    padding-bottom: 20rpx;
    box-sizing: border-box;
}

/* 职位头部信息 */
.job-header {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.job-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.job-salary {
  font-size: 40rpx;
  color: #ff4d4f;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.job-info {
  display: flex;
  flex-wrap: wrap;
  gap: 30rpx;
  margin-bottom: 20rpx;
}

.info-item {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #666;
}

.info-item text {
  margin-left: 8rpx;
}

.job-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

/* 各部分通用样式 */
.section,
.screenshot-info {
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
  margin: 24rpx 24rpx 0 24rpx;
  padding: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
}

.section-title text {
  margin-left: 12rpx;
}

.section-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

/* 内推者说明部分 */
.recommender-section {
  background: #fff;
}

/* 岗位详情链接和二维码部分 */
.job-link {
  background: #f9f9f9;
  padding: 24rpx;
  border-radius: 8rpx;
  margin-bottom: 30rpx;
  font-size: 28rpx;
  color: #0052d9;
  word-break: break-all;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.link-text {
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.copy-btn {
  color: #0052d9;
  background: #e6f7ff;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  margin-left: 20rpx;
  font-size: 24rpx;
  white-space: nowrap;
}





/* 发布人信息 */
.publisher-container {
  display: flex;
  flex-direction: column;
}

.publisher-info,
.reviewer-info {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.publisher-name,
.reviewer-name {
  font-size: 28rpx;
  color: #666;
  margin: 0 12rpx;
}



/* 底部操作栏 */
.footer-actions {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  height: 140rpx;
  background: #fff;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  z-index: 99;
}

.favor-btn {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 30rpx;
}

.favor-btn.active {
  background: #fff0f0;
} 
 


.apply-btn {
  flex: 1;
}

.screenshot-info {
  margin-top: 16rpx;
  padding: 24rpx;
  background: #f9f9f9;
  border-radius: 12rpx;
  font-size: 24rpx;
  color: #888;
  line-height: 1.8;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
} 
.jobid-info {
    /* 确保最后这一行文字有明确的底部间距 */
    margin-bottom: 40rpx;
  }

 
.bottom-safe-spacing {
    height: 250rpx; 
    width: 100%;
    background: transparent;
  }
  
  
  .footer-actions {
    position: fixed;
    left: 0;
    right: 0;
    bottom: 0;
    height: 140rpx;
    background: #fff;
    display: flex;
    align-items: center;
    padding: 0 30rpx;
    /* 适配 iOS 底部小黑条（安全区域） */
    padding-bottom: constant(safe-area-inset-bottom);
    padding-bottom: env(safe-area-inset-bottom);
    box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.08);
    z-index: 99;
  }